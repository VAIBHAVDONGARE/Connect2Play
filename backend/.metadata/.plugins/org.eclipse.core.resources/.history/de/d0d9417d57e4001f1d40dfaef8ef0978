package com.connect2play.dto;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Data
@NoArgsConstructor
@AllArgsConstructor
public class TurfSearchFilterDTO {

    private String location;    // Location for searching turfs
    private String sportType;   // Type of sport (e.g., football, basketball)
    private Double minPrice;    // Minimum price per hour
    private Double maxPrice;    // Maximum price per hour
    private Boolean isAvailable; // Availability status
}
